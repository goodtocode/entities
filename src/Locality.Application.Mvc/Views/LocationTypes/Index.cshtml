@model IEnumerable<GoodToCode.Shared.Models.LocationType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocationTypeKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationTypeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocationTypeKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationTypeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LocationTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LocationTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LocationTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
