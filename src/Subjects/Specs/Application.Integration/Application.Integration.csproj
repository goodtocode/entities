<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>Goodtocode.Subjects.Integration</RootNamespace>
		<AssemblyName>Goodtocode.Subjects.Integration</AssemblyName>
		<Version>1.0.0</Version>
		<TargetFramework>net7.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<ItemGroup>
		<SpecFlowObsoleteCodeBehindFiles Remove="Business\Queries\GetBusinessesByKey.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="Business\Queries\GetBusinessesByName.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="LearnerCourses\Commands\UpdateProgress\UpdateLearnerCourseProgressV1.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="LearnerCourses\Commands\UpdateRegisteredName\UpdateLearnerCourseRegisteredNameCommandV1.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="LearnerCourses\Queries\GetAll\GetLearnerCoursesQueryV1.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="LearnerCourses\Queries\GetLaunchUrl\GetLearnerCourseLaunchUrlQueryV1.feature.cs" />
		<SpecFlowObsoleteCodeBehindFiles Remove="LearnerCourses\Queries\Get\GetLearnerCourseDetailQueryV1.feature.cs" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.6.0" />
		<PackageReference Include="Moq" Version="4.18.4" />
		<PackageReference Include="Respawn" Version="6.0.0" />
		<PackageReference Include="SpecFlow.Plus.LivingDocPlugin" Version="3.9.57" />
		<PackageReference Include="SpecFlow.NUnit" Version="3.9.74" />
		<PackageReference Include="nunit" Version="3.13.3" />
		<PackageReference Include="FluentAssertions" Version="6.11.0" />
		<PackageReference Include="NUnit3TestAdapter" Version="4.4.2">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Infrastructure\Persistence\Persistence.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.test.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Business\Queries\GetBusinessesByKey.feature.cs">
		  <DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="Business\Queries\GetBusinessesByName.feature.cs">
		  <DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="LearnerCourses\Commands\UpdateProgress\UpdateLearnerCourseProgressV1.feature.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="Business\Commands\UpdateBusinessCommand.feature.cs">
			<DependentUpon>UpdateBusinessCommand.feature</DependentUpon>
		</Compile>
		<Compile Update="LearnerCourses\Queries\GetAll\GetLearnerCoursesQueryV1.feature.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="LearnerCourses\Queries\GetLaunchUrl\GetLearnerCourseLaunchUrlQueryV1.feature.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<Compile Update="LearnerCourses\Queries\Get\GetLearnerCourseDetailQueryV1.feature.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<SpecFlowFeatureFiles Update="Business\Queries\GetBusinessesByKey.feature">
		  <Visible>$(UsingMicrosoftNETSdk)</Visible>
		  <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="Business\Queries\GetBusinessesByName.feature">
		  <Visible>$(UsingMicrosoftNETSdk)</Visible>
		  <CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="LearnerCourses\Commands\UpdateProgress\UpdateLearnerCourseProgressV1.feature">
			<Visible>$(UsingMicrosoftNETSdk)</Visible>
			<CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="Business\Commands\UpdateBusinessCommand.feature">
			<Visible>$(UsingMicrosoftNETSdk)</Visible>
			<CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="LearnerCourses\Queries\GetAll\GetLearnerCoursesQueryV1.feature">
			<Visible>$(UsingMicrosoftNETSdk)</Visible>
			<CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="LearnerCourses\Queries\GetLaunchUrl\GetLearnerCourseLaunchUrlQueryV1.feature">
			<Visible>$(UsingMicrosoftNETSdk)</Visible>
			<CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
		<SpecFlowFeatureFiles Update="LearnerCourses\Queries\Get\GetLearnerCourseDetailQueryV1.feature">
			<Visible>$(UsingMicrosoftNETSdk)</Visible>
			<CodeBehindFile>%(RelativeDir)%(Filename).feature$(DefaultLanguageSourceExtension)</CodeBehindFile>
		</SpecFlowFeatureFiles>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="LearnerCourses\Commands\UpdateRegisteredName\" />
	</ItemGroup>

</Project>
